generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                String   @id @default(cuid())
  email             String   @unique
  password          String
  name              String?
  participantRoomId String?
  createdAt         DateTime @default(now())
  hostedRoom        Room?    @relation("HostRoom")
  participant       Room?    @relation("ParticipantRoom", fields: [participantRoomId], references: [id])

  @@map("user")
}

model Room {
  id           String   @id @default(cuid())
  code         String   @unique
  hostId       String   @unique
  createdAt    DateTime @default(now())
  name         String
  host         User     @relation("HostRoom", fields: [hostId], references: [id])
  tracks       Track[]
  participants User[]   @relation("ParticipantRoom")

  @@map("room")
}

model Track {
  id        String   @id @default(cuid())
  title     String
  artist    String?
  url       String
  roomId    String
  createdAt DateTime @default(now())
  room      Room     @relation(fields: [roomId], references: [id])

  @@map("track")
}
